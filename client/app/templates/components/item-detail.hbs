{{#if displayForm}}
  {{component componentName title=title model=modelCopy addFileForUpload=(action "addFileForUpload")}}
  <div class="row">
    {{#if isEditing}}
      <div class="col flex-center">
        <button {{action "cancel"}} class="action-button">Cancel</button>
      </div>
      <div class="col flex-center">
        <button {{action "save" model}} class="action-button">Save</button>
      </div>
    {{/if}}
    {{#if isNew}}
      <div class="width-100 center-text">
        <button {{action "create"}} class="action-button primary-color {{modelName}}-background">Create {{formattedModelName}}</button>
      </div>
    {{/if}}
  </div>
{{else}}
  <div class="item-detail">
    {{yield}}

    {{#if session.isAuthenticated}}
      <br>

      <div class="row">
        <div class="col flex-center">
          <button {{action "edit"}} class="action-button">Edit</button>
        </div>
        <div class="col flex-center">
          <button {{action "delete" model}} class="action-button">Delete</button>
        </div>
      </div>
    {{/if}}
  </div>
{{/if}}
