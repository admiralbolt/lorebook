<div class="container">

  <div class="row height-100">

    <div class="col-1 col-1-5 sidebar-nav sidebar-primary no-padding">
      <ul>
        <li>
          {{#link-to "npcs" class="nav-item"}}<ion-icon name="contact"></ion-icon> <span>NPCs</span>{{/link-to}}
          {{#link-to "songs" class="nav-item"}}<ion-icon name="musical-notes"></ion-icon> <span>Songs</span>{{/link-to}}
        </li>
      </ul>
    </div>

    <div class="col-2 sidebar-nav sidebar-detail no-padding">
      <ul>
        {{#each menu as |item|}}
          <li>
            {{#link-to api_data.activeModel item.id class="nav-item"}} {{item.name}} {{/link-to}}
          </li>
        {{/each}}
      </ul>
    </div>

    <div class="col-8 no-padding main-content">
      {{outlet}}
    </div>

  </div>

  <div class="floating-login">
    {{#if session.isAuthenticated}}
      <button class="btn btn-primary" {{action "invalidateSession"}} role="button">Logout</button>
    {{else}}
      <form {{action "authenticate" on="submit"}}>
        {{input id="username" placeholder="Username" class="form-control" value=username}}
        {{input id="password" placeholder="Password" class="form-control" type="password" value=password}}
        <button type="submit" class="btn btn-primary">Login</button>
        {{#if errorMessage}}
          <p>{{errorMessage}}</p>
        {{/if}}
      </form>
    {{/if}}
  </div>

</div>
