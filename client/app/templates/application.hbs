<div class="container">
  <PrimaryNavBar />

  <div class="row">
    {{#if displayMenu}}
      <div class="nav-sidebar">
        {{#if (and session.isAuthenticated api_data.activeModel)}}
          <div class="row nav-sidebar-wrapper">
            <LinkTo @route="{{api_data.activeModel}}-create" class="nav-sidebar-link no-padding">
              <div class="full flex-center nav-sidebar-item">
                <ion-icon name="add"></ion-icon>
                <span>Create</span>
              </div>
            </LinkTo>
          </div>
        {{/if}}
        {{#each menu as |item|}}
          {{#unless item.isNew}}
            <div class="row nav-sidebar-wrapper">
              <LinkTo @route={{api_data.activeModel}} @model={{item.id}} class="nav-sidebar-link no-padding">
                <div class="full flex-center nav-sidebar-item">
                  <span>{{item.name}}</span>
                </div>
              </LinkTo>
            </div>
          {{/unless}}
        {{/each}}
      </div>
      <div class="col-pad"></div>
    {{/if}}
    <div class="col main-content flex-center">
      {{outlet}}
    </div>
  </div>
</div>
