<div class="container">

  <div class="row nav nav-primary">
    <div class="col-2 col-sm-1 no-padding">
        {{#link-to "npcs" current-when="npcs npc npc-create"}}
          <div class="full flex-center">
            <ion-icon name="contact"></ion-icon>
            <span>NPCs</span>
          </div>
        {{/link-to}}
    </div>
    <div class="col-2 col-sm-1 no-padding">
      {{#link-to "songs" current-when="songs song"}}
        <div class="full flex-center">
          <ion-icon name="musical-notes"></ion-icon>
          <span>Songs</span>
        </div>
      {{/link-to}}
    </div>
    <div class="col-2 col-sm-1 no-padding">
      {{#link-to "login"}}
        <div class="full flex-center">
          <ion-icon name="key"></ion-icon>
          <span>Login</span>
        </div>
      {{/link-to}}
    </div>
  </div>

  <div class="row nav-pad"></div>
  <div class="row">
    {{#if displayMenu}}
      <div class="nav-sidebar">
        {{#if session.isAuthenticated}}
          <div class="row nav-sidebar-wrapper">
            <LinkTo @route="{{api_data.activeModel}}-create" class="nav-sidebar-link no-padding">
              <div class="full flex-center nav-sidebar-item">
                <ion-icon name="add"></ion-icon>
                <span>Create</span>
              </div>
            </LinkTo>
          </div>
        {{/if}}
        {{#each menu as |item|}}
          {{#unless item.isNew}}
            <div class="row nav-sidebar-wrapper">
              {{#link-to api_data.activeModel item.id class="nav-sidebar-link no-padding"}}
                <div class="full flex-center nav-sidebar-item">
                  <span>{{item.name}}</span>
                </div>
              {{/link-to}}
            </div>
          {{/unless}}
        {{/each}}
      </div>
      <div class="col-pad"></div>
    {{/if}}
    <div class="col main-content flex-center">
      {{outlet}}
    </div>
  </div>

</div>
