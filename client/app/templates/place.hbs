<ItemDetail @modelName="place" @componentName="place-form" @route="places" @model={{model}}>
  <div class="row">
    <div class="item-title place-color">
      {{model.name}}
    </div>
  </div>

  <br>

  <div class="row">
    <div class="item-label">Description</div>
    <div class="item-description">
      {{model.description}}
    </div>
  </div>

  <br>

  <div class="row">
    <div class="item-label">Lore</div>
    <div class="item-lore">
      <HotLink @text={{model.info}} />
    </div>
  </div>

  <br>

  <div class="row">
    <div class="item-label">Points of Interest</div>
  </div>

  {{#each model.points_of_interest as |point|}}
    <div class="row">
      <div class="poi-title primary-light-color">{{point.name}}</div>
      <div class="poi-info">
        <HotLink @text={{point.info}} />
      </div>
    </div><br>
  {{/each}}

</ItemDetail>
