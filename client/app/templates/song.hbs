<ItemDetail @modelName="song" @componentName="song-form" @route="songs" @model={{model}}>
  <div class="row">
    <div class="item-title song-color">
      {{model.name}}
    </div>
  </div>

  <br>

  <div class="row">
    <div class="item-label">Artist</div>
    <div class="item-description">
      {{model.artist}}
    </div>
  </div>

  <br>

  <div class="row">
    <div class="item-label">Flavor</div>
    <div class="item-flavor">
      {{model.flavor}}
    </div>
  </div>

  <br>

  <div class="row">
    <div class="item-label">Audio</div>
    <div class="item-audio">
      {{!- I hate that I have to do this but handlebars sucks sometimes -}}
      {{#if model.loop}}
        <audio class="item-audio" controls loop>
          <source src={{model.sound_file}}>
        </audio>
      {{else}}
        <audio class="item-audio" controls>
          <source src={{model.sound_file}}>
        </audio>
      {{/if}}
    </div>
  </div>
</ItemDetail>
